<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="io.scalecube.benchmarks.log4j2">

  <Properties>
    <Property name="patternLayout">%level{length=1} %d{ISO8601} %c{1.} %m [%t]%n</Property>
  </Properties>

  <Appenders>
    <RollingFile name="FILE"
                 fileName="reports/benchmarks.log"
                 filePattern="reports/benchmarks-%d{yyyy-MM-dd-HH}-%i.log.zip"
                 ignoreExceptions="false">
      <PatternLayout pattern="${patternLayout}"/>
      <Policies>
        <OnStartupTriggeringPolicy/>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="50MB"/>
      </Policies>
      <DefaultRolloverStrategy max="1000"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <Root level="${env:logLevel:-info}">
      <AppenderRef ref="FILE"/>
    </Root>
  </Loggers>

</Configuration>
